{
  "dataset_reader": {
    "type": "sentence_span_sentence_classification",
    "token_indexers": {
      "elmo": {
        "type": "elmo_characters"
      }
    }
  },
  "train_data_path": "diagnostic_classifiers/data/nc_relations/train.jsonl",
  "validation_data_path": "diagnostic_classifiers/data/nc_relations/val.jsonl",
  "model": {
    "type": "sentence_span_sentence_classification",
    "text_field_embedder": {
      "elmo": {
        "type": "elmo_token_embedder",
        "options_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_options.json",
        "weight_file": "https://s3-us-west-2.amazonaws.com/allennlp/models/elmo/2x4096_512_2048cnn_2xhighway/elmo_2x4096_512_2048cnn_2xhighway_weights.hdf5",
        "do_layer_norm": false,
        "dropout": 0.5,
        "requires_grad": false
      }
    },
    "classifier_feedforward": {
      "input_dim": 8192,
      "num_layers": 2,
      "hidden_dims": [300, 12],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    },
    "seq2seq_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 1024,
      "hidden_size": 1024,
      "num_layers": 1
    },
    "span_extractor": {
      "type": "endpoint",
      "input_dim": 2048
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence1", "num_tokens"], ["sentence2", "num_tokens"]],
    "batch_size": 10
  },
  "trainer": {
    "num_epochs": 500,
    "patience": 20,
    "cuda_device": 0,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}