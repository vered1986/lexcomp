{
  "dataset_reader": {
    "type": "sentence_word",
    "token_indexers": {
      "openai_transformer": {
        "type": "openai_transformer_byte_pair",
        "model_path": "https://s3-us-west-2.amazonaws.com/allennlp/models/openai-transformer-lm-2018.07.23.tar.gz"
      }
    }
  },
  "train_data_path": "diagnostic_classifiers/data/nc_literality/train.jsonl",
  "validation_data_path": "diagnostic_classifiers/data/nc_literality/val.jsonl",
  "model": {
    "type": "sentence_word",
    "text_field_embedder": {
      "allow_unmatched_keys": true,
      "embedder_to_indexer_map": {
          "openai_transformer": ["openai_transformer", "openai_transformer-offsets"]
      },
      "openai_transformer": {
        "type": "openai_transformer_embedder",
        "transformer": {
          "model_path": "https://s3-us-west-2.amazonaws.com/allennlp/models/openai-transformer-lm-2018.07.23.tar.gz",
          "requires_grad": false
        }
      }
    },
    "sentence_encoder": {
      "type": "lstm",
      "bidirectional": true,
      "input_size": 768,
      "hidden_size": 768,
      "num_layers": 1
    },
    "classifier_feedforward": {
      "input_dim": 2304,
      "num_layers": 2,
      "hidden_dims": [300, 2],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    }
  },
  "iterator": {
    "type": "basic",
    "batch_size": 10
  },
  "trainer": {
    "num_epochs": 500,
    "patience": 20,
    "cuda_device": 1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}