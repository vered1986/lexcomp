{
  "dataset_reader": {
    "type": "sentence_word",
    "token_indexers": {
      "tokens": {
        "type": "single_id",
        "lowercase_tokens": true
      }
    }
  },
  "train_data_path": "diagnostic_classifiers/data/nc_literality/train.jsonl",
  "validation_data_path": "diagnostic_classifiers/data/nc_literality/val.jsonl",
  "model": {
    "type": "sentence_word",
    "text_field_embedder": {
      "tokens": {
        "type": "embedding",
        "pretrained_file": "pretrained_models/fasttext.txt.gz",
        "embedding_dim": 300,
        "trainable": false
      }
    },
    "sentence_encoder": {
      "type": "intra_sentence_attention",
      "input_dim": 300
    },
    "classifier_feedforward": {
      "input_dim": 900,
      "num_layers": 2,
      "hidden_dims": [300, 2],
      "activations": ["relu", "linear"],
      "dropout": [0.2, 0.0]
    }
  },
  "iterator": {
    "type": "bucket",
    "sorting_keys": [["sentence", "num_tokens"]],
    "batch_size": 10
  },
  "trainer": {
    "num_epochs": 500,
    "patience": 20,
    "cuda_device": 1,
    "grad_clipping": 5.0,
    "validation_metric": "+accuracy",
    "optimizer": {
      "type": "adagrad"
    }
  }
}